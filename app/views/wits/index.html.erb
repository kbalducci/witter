<p id="notice"><%= notice %></p>

<h1>Listing Wits</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wits.each do |wit| %>
      <tr>
        <td><%= wit.message %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', wit, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_wit_path(wit) %></td>
        <td><%= link_to 'Destroy', wit, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

